.usuario
    display flex
    width 100%
    height 100%
    justify-content center
    align-items center
    .usuario-content
        width 75%
        height 100%
        display flex
        flex-direction column
        .mat-cardto
            width 100%
            height 100%
            display flex
            color white
            section
                display flex
                width 100%
                flex 1
                justify-content center
                align-items center
                background-color gray
                &.encabezado
                    display flex
                    flex-direction column
                    justify-content center
                    align-items center
                    .foto
                        width 48px
                        height 48px
                        vertical-align middle
                        border-radius 50%
                        img
                            max-width 100%
                            max-height 100%
                    .nombre
                        margin 0px 10px 0px 10px
                &.datos, &.generales
                    display flex
                    flex-direction column
                    justify-content center
                    .nombre2, .correo , .edad, .genero, .ciudad, .entero, .gustos
                        display flex
                        align-items center
                        justify-content center
                        .mat-form-field
                            width 100%
                &.datos
                    align-items center
                    .nombre2, .correo , .edad, .genero
                        flex-direction row
                        width 50%
                &.generales
                     .ciudad, .entero, .gustos
                        flex-direction column
                        width 100%
                    .ciudad
                        .inputs
                            display flex
                            justify-content center
                            width 100%


        .ordenes
            .tabla
                color white
