.usuario
    display flex
    width 100%
    height 100%
    justify-content center
    align-items center
    .usuario-content
        width 75%
        height 100%
        display grid
        .mat-cardto
            width 100%
            height 100%
            display flex
            color white
            section
                display flex
                width 100%
                flex 1
                justify-content center
                align-items center
                &.encabezado
                    display flex
                    flex-direction row
                    justify-content center 
                    align-items center
                    .foto
                        width 48px
                        height 48px
                        vertical-align middle
                        border-radius 50%
                        img 
                            max-width 100%
                            max-height 100%
                    .nombre
                        margin 0px 10px 0px 10px
                &.datos
                    display flex
                    flex-direction column
                    justify-content center 
                    align-items center
                    .nombre , .correo , .edad, .genero
                        display flex
                        flex-direction row 
                        align-items center
                        justify-content center  
                        width 50%
                        .mat-form-field
                            flex 1
            .ordenes
                .tabla
                    color white