rosa = #b7004b
rosita = #ff3377
naranja = #ef6100
verde = #00c900
azul = #1cccf4

.boleto, .boleto-content, .fila1, .contador, .tiempo, .fila2, .title, .cuadrado, .fondo-cuadro, .info, .fecha, .precio, .fila3, .politicas, .fila4, .titulo-proximos, .carreras-proximas
    display flex

.boleto
    width 100%
    height 100%
    justify-content center
    .boleto-content
        width 80%
        flex-direction column
        .fila1
            justify-content flex-start
            align-items center
            height 75%
            .contador
                justify-content center
                align-items center
                position relative
                width 300px
                height 150px                
                .tiempo
                    flex-direction column
                    justify-content center
                    align-items center
                    color white
                    background-color naranja
                    width 255px
                    height 75px
                    z-index 2
                    h3, p
                        font-family Loto
                        margin 0px
                    h3
                        font-size 18px
                svg
                    position absolute
                    transform translate(0px, -27px) rotate(25deg)
                    path
                        fill naranja

                    
        .fila2
            height 100%
            justify-content center
            .title
                color white
                flex-direction column
                width 60%
                height 70%
                align-items flex-end
                h1
                    font-family Bebas
                    font-size 100px
                    margin 10px
                    font-weight 50
            .cuadrado
                width 100%
                justify-content center
                height 97%
                position relative
                .fondo-cuadro
                    flex-direction column
                    background-color rosita
                    width 75%
                    height 63%
                    z-index 2
                    .info
                        flex-direction row
                        justify-content center
                        height 100%
                        .fecha
                            justify-content flex-start
                            color white
                            flex-direction column
                            width 50%
                            margin 20px
                            p
                                margin: 0px;
                                font-family Loto                            
                                &.dia
                                    font-size:  40px
                                &.mes
                                    font-size:  30px   
                                &.nombre
                                    font-size:  20px                                                                   
                        .precio
                            width 50%
                            justify-content flex-end
                            align-items center
                            flex-direction column
                            color white
                            .ahora
                                display flex
                                h2, p
                                    margin 0px
                                    font-family Loto
                                    font-size 60px
                                p
                                    font-size 20px
                                    font-family Gloss_And_Bloom
                            .despues
                                display flex
                                p
                                    font-family Loto
                                    margin 5px
                                    &.des 
                                        font-size 15px
                                    &.pre
                                        font-size 25px
                                        text-decoration:line-through
                                    &.mxn
                                        font-family Gloss_And_Bloom
                                        font-size 15px
                    .productos
                        height 50%
                        display flex
                        flex-direction column
                        color white
                        .inputs
                            display flex
                            input 
                                flex 1
                                margin 5px
                        p
                            margin 0px
                            font-family Loto
                .svg1, .svg2
                    position absolute
                    svg
                        width 100%
                        path
                            fill rosita
                .svg1
                    transform translate(284px, -51px) rotate(-15deg) scale(1.3)
                .svg2
                    transform translate(-335px, 138px) rotate(-52deg) scale(0.7)                
        .fila3
            height 30%
            .politicas                                
                justify-content center
                align-items center
                color gray
                p
                    width 40%
                    font-size 11px

        .fila4
            height 30%
            justify-content center
            align-items center
            .titulo-proximos
                color gray
                margin-right: 80px;
            .carreras-proximas
                h3
                    font-family Gloss_And_Bloom
                    margin-right 40px
                    &:hover
                        cursor pointer