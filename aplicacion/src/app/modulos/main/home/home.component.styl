mobile = 'screen and (max-width: 768px)'

rosa = #ff3377
naranja = #ef6100
verde = #00c900
azul = #1cccf4

transition(duracion, delay)
    -webkit-transition all duracion cubic-bezier(0.445, 0.050, 0.550, 0.950)
    transition all duracion cubic-bezier(0.445, 0.050, 0.550, 0.950)
    -webkit-transition-delay delay ease-in-out
    transition-delay delay ease-in-out

*
    font-family Loto

.home
    display flex
    width 100%
    height 100%
    justify-content center
    align-items center
    background-color black
    .home-content
        display flex
        width 100%
        height 100%
        flex-direction column
        .portada
            position relative
            width 100%
            height 70%
            @media mobile
                height 440px
            .background
                position absolute
                top 0
                left 0
                height 100%
                width 100%
                pointer-events none
                overflow hidden
            .contador
                position absolute
                background rgba(0, 0, 0, 0.5)
                color #f1f1f1
                width 100%
                max-width 100%
                height 100%
                display flex
                flex-direction column
                justify-content center
                align-items center
                .titulo, .tiempo, .boton, .dias, .horas, .minutos, .segundos
                    display flex
                    justify-content center
                    align-items  center
                    width 100%
                    h1, h3
                        font-size 50px
                        margin:  0px
                        font-family Loto
                        font-weight 50
                        @media screen and (max-width: 1048px)
                            font-size 38px
                        @media mobile
                            font-size 20px
                .tiempo
                    height 65%
                    width 70%
                    .dias, .horas, .minutos, .segundos
                        width 50%
                        flex-direction column
                .boton
                    transition(500ms, 0)
                    &:hover
                        transform scale(1.1)
        .linea
            width 100%
            height 8px
            background-color verde
        .piesito
            display flex
            color white
            width 100%
            justify-content center
            align-items center
            margin-top: 50px;
            margin-bottom: 50px;
            .piesito-content
                display flex
                width 90%
                justify-content center
                align-items center
                @media screen and (max-width: 970px)
                    flex-direction column
                @media mobile
                    flex-direction column
                .galeria
                    flex 3
                    display flex
                    justify-content center
                    align-items center
                    margin 10px 10px 10px 10px
                    transition(500ms, 0)
                    .titulo-content
                        flex 1
                        position relative
                        display flex
                        justify-content flex-end
                        svg
                            position absolute
                            transform translate(0px, -27px) rotate(25deg)
                            path
                                fill naranja
                        .titu
                            height 270px
                            display flex
                            justify-content center
                            align-items center
                            flex-direction column
                            background-color naranja
                            width 70%
                            z-index: 2;
                            h2
                                font-size 50px
                                margin 0px
                    .images
                        flex 2
                        img
                            width 100%
                            height 275px
                    &:hover
                        cursor pointer
                        transform rotate(1deg) scale(1.1)
                .tit, proximas, .segundo, .tercero
                    display flex
                    flex 1
                    justify-content center
                    align-items center
