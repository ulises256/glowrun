.input-layout
    width: 100%;
    flex: 1 1 auto;

transition(duracion, delay)
    -webkit-transition all duracion cubic-bezier(0.445, 0.050, 0.550, 0.950)
    transition all duracion cubic-bezier(0.445, 0.050, 0.550, 0.950)
    -webkit-transition-delay delay ease-in-out
    transition-delay delay ease-in-out    

div
    display flex

*
    font-family Loto    

.login
    justify-content center
    align-items center
    width 100%
    height 100%
    .login-content
        flex-direction column
        justify-content center
        align-items center
        width 90%
        height 100%
        color white
        .cabeza, .cuerpo, .pies, .contenido-precios, .back-login-icons, .contenido-icons
            height 80%
            width 100%
            justify-content center
            align-items center            
        .cabeza
            justify-content flex-start
            .back-precio
                background-color #f76024
                position relative
                height 40%
                width 15%
                .contenido-precios
                    flex-direction column
                    position absolute
        .cuerpo
            .tito
                flex 1
                justify-content flex-end
                h1
                    font-size 80px
            .back-login-icons
                flex 1.5
                position relative
                img
                    width 100%
                    height 100%
                .contenido-icons
                    position absolute
                    width 100%
                    a
                        margin 20px 20px 20px 20px
                        background-color rgba(0, 0, 0, 0.1)
                        transition(500ms, 0)
                        &:hover
                            transform scale(1.5)
                        img
                            width 68px
        .pies
            .di
                flex 1
            p
                flex 1
                font-size 10px
                justify-content center

            .do
                flex: 1