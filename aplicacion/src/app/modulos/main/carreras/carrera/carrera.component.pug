.carrera
    .carrera-content
        .arriba
            .izquierda
                .titulo
                    h1.titulo {{carrera.$nombre}}
                    .boton
                        button(mat-raised-button color="primary" id="btn-comprar" (click)="irAComprar()") COMPRAR BOLETO
                .registro
                    h3.reg reistrate
                .descripcion
                    p {{carrera.$description}}
                .mapita
                    div(#googleMap style="width:100%;height:100%;")
                .cositas
                    explicacion
            .centro
            .derecha
                .galeria
                    ngx-slick( #slickModal="slick-modal" [config]="slideConfig" (afterChange)="afterChange($event)").carousel
                        .slide(ngxSlickItem *ngFor="let image of carrera.geImagenes()")
                            imagen([id]="image.getId()" )
                a(routerLink="'/galerias'" ) IR A GALERIA
                .proximas
                    .tit
                        p Proxima Carreras
                    .car
                        .primero(id="carrera1" (click)="verCarrera(carrerasProximas[1].$id)")
                            img(src="{{ imagenes[0] }}", style="" alt="")
                            .content(style="background-color : #f53277")
                                .fecha
                                    p {{carrerasProximas[1]?.$fechaini | date:'mediumDate'}}
                                .nombre
                                    h2 {{carrerasProximas[1]?.$nombre}}
                                .pie
                                    p Comptra tu boleto
                        .segundo(id="carrera2" (click)="verCarrera(carrerasProximas[2].$id)")
                            img(src="assets/images/cuadritos/glow_home_2.png"  alt="")
                            .content(style="background-color : {{colores[1]}}")
                                .fecha
                                    p {{carrerasProximas[2]?.$fechaini | date:'mediumDate'}}
                                .nombre
                                    h2 {{carrerasProximas[2]?.$nombre}}
                                .pie
                                    p Comptra tu boleto                    
                        .tercero(id="carrera3" (click)="verCarrera(carrerasProximas[3].$id)")
                            img(src="assets/images/cuadritos/glow_home_3.png", alt="")
                            .content(style="background-color : {{colores[2]}}")
                                .fecha
                                    p {{carrerasProximas[3]?.$fechaini | date:'mediumDate'}}
                                .nombre
                                    h2 {{carrerasProximas[3]?.$nombre}}
                                .pie
                                    p Comptra tu boleto 
        .abajo
            h4 PATROCINADORES
            .patrocinadores
                .patro(*ngFor="let patro of carrera.getPatrocinadores()")
                    imagen([id]="patro?.$imagen?.getId()" )
