.ordenes
	.ordenes-content
		mat-tab-group(mat-stretch-tabs class="example-stretched-tabs")
			mat-tab(label="Cargos en OpenPay")
				mat-form-field
					input(matInput (keyup)="applyFilter($event.target.value)" placeholder="Buscar Usuario")
				.mat-elevation-z8
					mat-table(#table1 [dataSource]="dataSourceOpenpay" matSort)
						ng-container(matColumnDef="{{column.id}}" *ngFor="let column of columnsOpen")
							mat-header-cell(*matHeaderCellDef mat-sort-header) {{column.value}}
							mat-cell(*matCellDef="let element") {{element[column.id]}}

						mat-header-row(*matHeaderRowDef="columns_openpay")
						mat-row(*matRowDef="let row; columns: columns_openpay;" (click)="ver(row.id)")

			mat-tab(label="Ordenes de boletos")
				mat-form-field
					input(matInput (keyup)="applyFilter($event.target.value)" placeholder="Buscar Usuario")
				.mat-elevation-z8
					mat-table(#table2 [dataSource]="dataSourceOrdenes" matSort)
						ng-container(matColumnDef="{{column.id}}" *ngFor="let column of columnsOrdenes")
							mat-header-cell(*matHeaderCellDef mat-sort-header) {{column.value}}
							mat-cell(*matCellDef="let element") {{element[column.id]}}

						mat-header-row(*matHeaderRowDef="columns_ordenes")
						mat-row(*matRowDef="let row; columns: columns_ordenes;" (click)="ver(row.id)")

					mat-paginator([pageSizeOptions]="[5, 10, 25, 100]")
