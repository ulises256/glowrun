.cdk-overlay-pane
    max-width 100vw !important
    max-height 95vh
    .mat-dialog-container
        padding 0px !important
        max-width 100%
        max-height 100%
        .imagen-contenedor
            width 100%
            height 100%  
            img
                max-width 100%
                max-height 100%
.cdk-overlay-dark-backdrop 
    background: rgba(0, 0, 0, 0.8);


.green
    background-color #008000

.imge-add-remove
    img
        position relative
        max-width 100%
        max-height 100%
    .add
        left 0px
    .remove
        right 0px


.image_wrapper .add, .image_wrapper .remove
    position absolute
    top 0px
    opacity 0
    transition opacity 0.2s linear
    -webkit-transition opacity 0.2s linear
    cursor pointer
    border 0px
    width 50px
    height 50px

.image_wrapper:hover .add, .image_wrapper:hover .remove
    transition opacity 0.2s linear
    -webkit-transition opacity 0.2s linear
    opacity 0.8